{
  "extends": ["eslint:recommended", "plugin:import/errors", "plugin:react/recommended"],
  "plugins": ["react", "import"],
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": 1,
    "react/jsx-uses-react": "off",
    "react/react-in-jsx-scope": "off",
    "react/prop-types": "off",
    "import/no-unresolved": "off"
  },
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
